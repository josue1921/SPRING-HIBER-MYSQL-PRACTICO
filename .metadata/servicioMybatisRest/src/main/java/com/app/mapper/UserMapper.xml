<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.dao.UserDao">
<!--Set up domain Class corresponds to the fields of the tables in the database one by one. Pay attention to the fields in the database and the fields in the database. domain The field names in the classes are different, so be sure to do it here! uuuuuuuuuu-->
	<resultMap id="BaseResultMap" type="com.app.domain.User">
		<id column="ID" property="userId" jdbcType="INTEGER" />
		<result column="EMAIL" property="userEmail" jdbcType="CHAR" />
		<result column="FIRST_NAME" property="userName" jdbcType="CHAR" />
		<result column="LAST_NAME" property="userlastName" jdbcType="CHAR" />
		<result column="PASSWORD" property="userPassword" jdbcType="CHAR" />
	</resultMap>
	<!-- Query single record -->
	<select id="selectUserById" parameterType="int" resultMap="BaseResultMap">
		SELECT * FROM user WHERE id = #{userId}
	</select>
</mapper>